<style>
  :root {
    --footer-height: 500px;
  }

  footer {
    background-color: var(--color-b-d);
    position: fixed;
    bottom: var(--space-xs);
    height: var(--footer-height);
    width: 100vw;
    display: grid;
    place-content: center;
  }

  footer nav {
    display: flex;
    justify-content: space-between;
    margin-bottom: var(--space-sm)
  }

  footer .history ul {
    grid-template-columns: 1fr 1fr;
    display: grid;
    grid-gap: 0 var(--space-sm);
    grid-template-rows: 1fr 1fr 1fr;
  }

  footer nav ul {
    display: flex;
    flex-direction: column;
    padding: 0;
  }

  footer h4 {
    font-weight: bold;
  }

  main {
    margin-bottom: calc(var(--footer-height) + var(--space-sm));
    min-height: 90vh;
  }

  footer * {
    color: var(--color-t-l);
    max-width: 1080px;
  }

  footer .bottom {
    display: grid;
    grid-template-columns: repeat(2, minmax(300px, 1fr))
  }

  footer .logo {
    display: grid;
    place-content: center end;
  }

  footer .logo svg {
    width: 250px;
  }
</style>
<footer>
  <nav>
    <div>
      <h4>Capabilities (Home)</h4>
      <ul>
        <li>Skills</li>
        <li>Featured Work</li>
