---
layout: layouts/_base.njk
---

<div class="portfolio">
   <div class="hero">
      <p class="company">
         Earl Mangulabnan | Portfolio 
         {% if company -%} 
         for {{ company }}
         {%- endif -%}
      </p>
      <p class="greeting">Hi {{ correspondent }},</p>
      <div class="markdown-content">
         <p>
            {{ content | safe }}
         </p>
      </div>
   </div>

   {%- include 'components/featured.njk' -%}

   <h2>Work</h2>

   <!-- Show Other Work -->
   {%- for work in collections.sortedWork -%}
   <a class="project-link" href="{{ work.filePathStem }}">{%- include "components/work-card.njk" -%}</a>
   {%- endfor -%}
</div>
