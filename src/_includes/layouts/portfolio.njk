---
layout: layouts/base.njk
---

<div class="portfolio">
   <div class="hero">
      <p class="company">Earl Mangulabnan | Portfolio for {{ company }}</p>
      <p class="greeting">Hi {{ correspondent }},</p>
      <div class="markdown-content">
         <p>
            {{ content | safe }}
         </p>
      </div>
   </div>

   {%- include 'components/featured.njk' -%}

   <h2>Work</h2>

   <!-- Show Other Work -->
   {%- for project in collections.project -%} {%- if not project.data.tags.includes('featured') -%}
   <a class="project-link" href="{{ project.filePathStem }}">
      <div class="project not-featured">
         <div class="left">
            <h3 class="title">
               {{ project.data.title }}
            </h3>
            <h4 class="headline">
               {{ project.templateContent | getHeadline }}
            </h4>
         </div>
         <p class="summary">
            {{ project.templateContent | getSummary }}
         </p>
      </div>
   </a>
   {%- endif -%} {%- endfor -%}
</div>
