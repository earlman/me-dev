---
layout: layouts/_base.njk
---
<style>
   .work {
      --max-width: 1440px;
      --display-text-height: 70vh;
   }

   .work {
      max-width: var(--max-width);
      padding-left: var(--space-md);
      padding-right: var(--space-md);
   }

   .work .title-c {
      display: grid;
      align-content: center;
      height: var(--display-text-height);
   }

   .work .title-c h1 {
      font-variation-settings: "WONK" 0, "opsz" 77, "SOFT" 0, "wght" 500;
      margin-top: var(--space-sm);
      margin-bottom: var(--space-md);
      font-family: "Abril Fatface";
      line-height: 1.1;
      font-size: calc(.45 * var(--display-text-height));
   }

   .work .overview {
      max-width: 50ch;
      margin-bottom: var(--space-xl);
      font-size: var(--d-lg);
      color: #151515;
   }

   .work .markdown-content {
      width: var(--max-width);
   }

   .work .back {
      text-align: right;
      margin-top: var(--space-md);
   }

   .work .content {
      grid-template-columns: 25% 50% 25%;
   }
</style>

<link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&display=swap" rel="stylesheet">

<section class="work">


   <div class="title-c">
      <h1 class="display-text">
         {{ title }}
      </h1>
   </div>

   <div class="overview">
      {{overview}}
   </div>

   <div class="back">
      <a href="/work">â¬… Back to portfolio</a>
   </div>

   <div>
      {%- for item in tech -%}
      {{item.name}}
      {{item.link}}
      {%- endfor -%}
   </div>

   <div class="markdown-content content">
      <div class="links">
         <a href="{{ url | url }}" target="_blank">{% indieAvatar url %}Website</a>
         {%- if (urlGithub) and (not urlGithubPrivate) -%}
         <a href="{{ urlGithub | url }}" target="_blank">{% indieAvatar "https://github.com/" %}Github{{ urlGithub | log
            }}</a>
         {%- endif -%}
      </div>
      {{ content | safe }}
   </div>
</section>