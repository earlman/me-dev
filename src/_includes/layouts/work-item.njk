---
layout: layouts/_base.njk
---
<style>
   .work {
      --max-width: 1440px;
      --display-text-height: 35vh;
   }

   .work {
      max-width: var(--max-width);
      padding-left: var(--space-md);
      padding-right: var(--space-md);
   }

   .work .title-c {
      display: grid;
      align-content: flex-end;
      margin-left: calc(-1 * var(--space-xs));
   }

   .work .title-c h1 {
      font-variation-settings: "WONK" 0, "opsz" 100, "SOFT" 0, "wght" 800;
      margin-top: var(--space-2xl);
      margin-bottom: var(--space-md);
      line-height: 1.1;
      color: var(--color-t5);
      font-size: 12vh;
   }

   .work .overview {
      max-width: 50ch;
      margin-bottom: var(--space-md);
      font-size: var(--d-lg);
      color: var(--color-t3);
   }

   .work .markdown-content {
      max-width: var(--max-width);
   }

   .work .back {
      text-align: right;
      margin-top: var(--space-md);
   }

   .work .content {
      grid-template-columns: 25% 50% 25%;
   }


   @media (min-width: 600px) {
      .work .title-c h1 {
         font-size: 30vh;
      }
   }
</style>

<section class="work">


   <div class="title-c">
      <h1 class="display-text">
         {{ title }}
      </h1>
   </div>

   <div class="overview">
      {{overview}}
   </div>

   {% if not content or content|trim == "" %}
   <div>
      Content is empty.
   </div>
   {% endif %}


   <!-- UNDER CONSTRUCTION -->
   <div>
      {{title}}
   </div>
   <div>
      <h2 style="">Overview</h2>
      {{overview}}
   </div>

   <div>
      <h2>Tech</h2>
      <style>
         ul.tech-links {
            display: flex;
            max-width: unset;
            gap: var(--space-xs);
            flex-wrap: wrap;
         }

         .tech-links li {
            border: 1px solid var(--color-t5);
            border-radius: var(--border-radius);
            list-style-type: none;
            padding: var(--space-xs);
         }

         .tech-links li a {
            display: flex;
            flex-wrap: nowrap;
            align-items: center;
            gap: var(--space-xs);
         }

         .tech-links li img {
            filter: grayscale(100%);
            width: var(--space-sm);
            height: var(--space-sm);
            transition: filter 0.2s ease;
         }

         .tech-links li img:hover {
            filter: none;
            filter: grayscale(0%);
         }
      </style>

      <ul class="tech-links">
         {% for item in tech %}
         <li>
            <a href="{{ item.url }}" target="_blank">
               {% techAvatar item.url %}
               {{ item.name }}
            </a>
         </li>
         {% endfor %}
      </ul>
   </div>

   <div>
      <h2>Tasks</h2>
      <ul>
         {% for item in tasks %}
         <li>
            {{item}}
         </li>
         {% endfor %}
      </ul>
   </div>
   <div>
      <h2 style="">Tagline</h2>
      {{tagline}}
   </div>

   <div>
      <h2>Features</h2>
      <ul>
         {% for item in features %}
         <li>
            {{item}}
         </li>
         {% endfor %}
      </ul>
   </div>

   <div>
      {{url}}
   </div>
