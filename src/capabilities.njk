<!-- Hero -->
<section class="hero">
  <style>
    .hero {
      position: relative
    }

    .hero h1 {
      font-size: 160px;
      color: #85400D;
      font-family: "Playfair Display";
      letter-spacing: -0.5775rem;
    }

    .hero-content {
      /*position: absolute;*/
    }

    .platonic-solids {
      position: absolute;
      left: 0;
      top: var(--space-md);
      width: 100%;
    }
  </style>
  <div class="hero-animated-text">

    <style>
      .hero-animated-text .container {
        display: flex;
        /*   border:1px solid red; */
        height: 100%;
        align-items: center;
      }

      .hero-animated-text svg {
        display: block;
        font: 10.5em 'Playfair Display';
        width: 960px;
        height: 300px;
        margin: 0 auto;
      }

      .hero-animated-text .text-copy {
        fill: none;
        stroke: #D4CBC4;
        /*     stroke-dasharray: 6% 29%; */
        stroke-dasharray: 50px 600px 100px 600px;
        stroke-width: 1px;
        /*     stroke-dashoffset: 740px; */
        /*     stroke-dashoffset: 0; */

        animation: stroke-offset 5.5s infinite linear;
      }

      .hero-animated-text .text-copy:hover {
        fill: rgba(133, 64, 13, 1);
        stroke: rgba(133, 64, 13, 1);
      }

      .skills json-table {
        max-width: 300px;
        width: 100%;
      }
    </style>
    <!-- I might be able to sell this web component lol $3?-->
    <div class="container">
      <svg viewBox="0 0 1200 300">
        <symbol id="s-text">
          <text text-anchor="middle" x="50%" y="80%">Happy Monday</text>
        </symbol>

        <g class="g-ants">
          <use xlink:href="#s-text" class="text-copy"></use>
        </g>
      </svg>
    </div>
    <script>
      gsap.to(".text-copy", {
        // "stroke-dashoffset": 0,
        "stroke-dasharray": "150px 0 150px 0",
        duration: 2,
        ease: "power1.out"
      })
    </script>
  </div>
  <div class="platonic-solids">
    {%- include "components/platonic-solids.njk" -%}
  </div>
  <div class="hero-content">
    {%- include "components/hero-content.njk" -%}
  </div>

</section>


<style>
  .skills {
    height: 600px;
    display: flex;
    gap: var(--space-sm)
  }
</style>
<div class="skills">
  <json-table src="/data/skills.json" path="lang_frame" no-headers></json-table>
  <json-table src="/data/skills.json" path="tools_apps" no-headers></json-table>
</div>