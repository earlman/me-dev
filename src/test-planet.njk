<script>
  function createLine() {
    new LeaderLine(
      document.getElementById('line-start'),
      document.getElementById('line-end'),
      {
        path: "grid",
        endPlug: "square",
        size: 1,
        // color: "#000000",
        startSocket: "bottom",
        endSocket: "right",
        // dash: {animation: true}
      }
    );

    const animationTarget = document.querySelector('.hover-target')


    animationTarget.addEventListener('mouseover', animationEIB)
    function animationEIB() {

      t1 = gsap.timeline();
      t1.to("#leader-line-1-line-shape", {
        strokeDashoffset: 0,
        opacity: 1,
        duration: 1.5, // Animation duration in seconds
        ease: "power1.out",
      });
      t1.to(".hover-target", {
        opacity: 1
      })
    }
  }
</script>

<script src="/libraries/leader-line.min.js" onload="createLine()"></script>